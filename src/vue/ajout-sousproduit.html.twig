{% block title %} {{ parent() }} Ajouter un produit {% endblock %}


{% block contenu %}
    

        <form class="form-signin" method="post">
        <div align ="center" style="padding-left:10% ; padding-right:10% ; padding-top: 2%">
                <div style="padding-bottom:7%">
                <h1 class="h3 mb-3 font-weight-normal">Ajout d'un produit</h1>
                </div>
                
                <input type="libelle" class="form-control" id="libelle" name="libelle" placeholder="Libelle">
                <input type="qte" class="form-control" id="qte" name="qte" placeholder="QuantitÃ©">
                <input type="fabricant" class="form-control" id="fabricant" name="fabricant" placeholder="Fabricant">
