                                <option value="{{ t.id }}" >{{ t.libelle }}</option>
                         {% else %}
                                <option value="{{ t.id }}">{{t.libelle }}</option>
                         {% endif %}
                         {% endfor %}    
                         
                </select>
                <div style="padding-top:2%; padding-bottom:2%">
                <input type="commentaire" class="form-control" id="commentaire" name="commentaire" placeholder="Commentaire">
                </div>
                

                <button type="submit" name="btAjouter" class="btn btn-lg btn-primary btn-block">Ajouter</button>
        </div>
        </form>

{% endblock %}
